{
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	], /* Basic Options */
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "./dist",
		"module": "commonjs",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"allowJs": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2017",
			"dom"
		]
	}
}